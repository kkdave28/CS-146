echo  
echo  Demonstrating piped commands 
echo  
echo ------------------------------------------
echo  1. ls -al piped wc -l 
echo  
ls -al | wc -l
echo  
echo ------------------------------------------
echo  
echo  2. ls piped sort piped uniq piped wc 
echo  
ls | sort | uniq | wc 
echo  
echo ------------------------------------------
echo  
echo  3. cat into testfile.txt piped wc -l 
echo  
cat < testfile.txt | wc -l
echo  
echo ------------------------------------------
echo  
echo  4. cat into testfile.txt piped wc -l to testfile2.txt 
echo  
cat < testfile.txt | wc -l > testfile2.txt
echo  
echo ------------------------------------------
echo  
echo  5. cat into testfile2.txt 
echo  
cat < testfile2.txt
echo  
echo ------------------------------------------
echo  
echo  6. cat into testfile.txt piped sort piped uniq piped wc to testfile2.txt 
echo  
cat < testfile.txt | sort | uniq | wc > testfile2.txt
echo  
echo ------------------------------------------
echo  
echo  7. cat into testfile2.txt 
echo  
cat < testfile2.txt
echo  
echo ------------------------------------------
echo  
echo  Demonstration of pipes completed 
